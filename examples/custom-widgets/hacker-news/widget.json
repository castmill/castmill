{
  "name": "Hacker News Feed",
  "slug": "hacker-news",
  "description": "Displays the latest stories from Hacker News with an orange-themed tech design. Pre-configured with the official HN RSS feed. Includes custom icons, background, and theme styles.",
  "icon": "assets/icons/hn-logo.svg",
  "aspect_ratio": "16/9",
  "version": "1.0.0",
  "author": {
    "name": "Castmill",
    "url": "https://castmill.com"
  },
  "assets": {
    "icons": {
      "logo": {
        "path": "assets/icons/hn-logo.svg",
        "type": "image/svg+xml",
        "description": "Hacker News Y Combinator logo"
      },
      "upvote": {
        "path": "assets/icons/upvote.svg",
        "type": "image/svg+xml",
        "description": "Upvote arrow icon"
      },
      "comment": {
        "path": "assets/icons/comment.svg",
        "type": "image/svg+xml",
        "description": "Comment bubble icon"
      },
      "external-link": {
        "path": "assets/icons/external-link.svg",
        "type": "image/svg+xml",
        "description": "External link icon"
      }
    },
    "images": {
      "background": {
        "path": "assets/images/background.svg",
        "type": "image/svg+xml",
        "description": "Dark gradient background with subtle grid pattern"
      }
    },
    "styles": {
      "theme": {
        "path": "assets/styles/hn-theme.css",
        "type": "text/css",
        "description": "HN color theme and utility classes"
      }
    }
  },
  "template": {
    "type": "group",
    "name": "hn-widget",
    "style": {
      "width": "100%",
      "height": "100%",
      "display": "flex",
      "flex-direction": "column",
      "background-image": "url({{asset:images.background}})",
      "background-size": "cover",
      "overflow": "hidden",
      "font-family": "system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
      "padding": "2vh"
    },
    "components": [
      {
        "type": "group",
        "name": "header",
        "style": {
          "display": "flex",
          "align-items": "center",
          "gap": "1.5vh",
          "margin-bottom": "2vh",
          "padding-bottom": "1.5vh",
          "border-bottom": "2px solid rgba(255, 102, 0, 0.3)"
        },
        "components": [
          {
            "type": "image",
            "name": "logo",
            "opts": {
              "src": "{{asset:icons.logo}}"
            },
            "style": {
              "width": "5vh",
              "height": "5vh",
              "border-radius": "0.8vh"
            }
          },
          {
            "type": "text",
            "name": "title",
            "opts": {
              "text": "Hacker News"
            },
            "style": {
              "font-size": "3.5vh",
              "font-weight": "700",
              "color": "#ff6600",
              "letter-spacing": "-0.02em"
            }
          },
          {
            "type": "text",
            "name": "subtitle",
            "opts": {
              "text": "Top Stories"
            },
            "style": {
              "font-size": "2vh",
              "color": "rgba(255, 255, 255, 0.5)",
              "margin-left": "auto"
            }
          }
        ]
      },
      {
        "type": "scroller",
        "name": "news-scroller",
        "opts": {
          "items": {"key": "data.items"},
          "direction": "up",
          "speed": {"key": "options.scroll_speed", "default": 30},
          "gap": "2vh"
        },
        "style": {
          "flex": "1",
          "width": "100%",
          "overflow": "hidden"
        },
        "component": {
          "type": "group",
          "name": "story-card",
          "style": {
            "display": "flex",
            "flex-direction": "column",
            "background": "rgba(255, 255, 255, 0.05)",
            "border-radius": "1vh",
            "padding": "2vh",
            "border-left": "3px solid #ff6600"
          },
          "components": [
            {
              "type": "text",
              "name": "story-title",
              "opts": {
                "text": {"key": "$.title"}
              },
              "style": {
                "font-size": "2.8vh",
                "font-weight": "600",
                "color": "#ffffff",
                "line-height": "1.3",
                "margin-bottom": "1vh"
              }
            },
            {
              "type": "group",
              "name": "story-meta",
              "style": {
                "display": "flex",
                "gap": "2vh",
                "align-items": "center"
              },
              "components": [
                {
                  "type": "image",
                  "name": "upvote-icon",
                  "opts": {
                    "src": "{{asset:icons.upvote}}"
                  },
                  "style": {
                    "width": "1.8vh",
                    "height": "1.8vh"
                  }
                },
                {
                  "type": "text",
                  "name": "story-score",
                  "opts": {
                    "text": {"key": "$.score", "default": "â€”"}
                  },
                  "style": {
                    "font-size": "1.8vh",
                    "color": "#ff6600",
                    "font-weight": "600"
                  }
                },
                {
                  "type": "image",
                  "name": "comment-icon",
                  "opts": {
                    "src": "{{asset:icons.comment}}"
                  },
                  "style": {
                    "width": "1.8vh",
                    "height": "1.8vh",
                    "margin-left": "1vh"
                  }
                },
                {
                  "type": "text",
                  "name": "story-comments",
                  "opts": {
                    "text": {"key": "$.comments", "default": "0"}
                  },
                  "style": {
                    "font-size": "1.8vh",
                    "color": "rgba(255, 255, 255, 0.6)"
                  }
                },
                {
                  "type": "text",
                  "name": "story-date",
                  "opts": {
                    "text": {"key": "$.pubDate_formatted", "default": ""}
                  },
                  "style": {
                    "font-size": "1.8vh",
                    "color": "rgba(255, 102, 0, 0.8)",
                    "margin-left": "auto"
                  }
                },
                {
                  "type": "group",
                  "name": "source-group",
                  "style": {
                    "display": "flex",
                    "align-items": "center",
                    "gap": "0.5vh"
                  },
                  "components": [
                    {
                      "type": "image",
                      "name": "link-icon",
                      "opts": {
                        "src": "{{asset:icons.external-link}}"
                      },
                      "style": {
                        "width": "1.4vh",
                        "height": "1.4vh"
                      }
                    },
                    {
                      "type": "text",
                      "name": "story-source",
                      "opts": {
                        "text": {"key": "$.source", "default": "ycombinator.com"}
                      },
                      "style": {
                        "font-size": "1.6vh",
                        "color": "rgba(255, 255, 255, 0.4)"
                      }
                    }
                  ]
                }
              ]
            }
          ]
        }
      },
      {
        "type": "group",
        "name": "footer",
        "style": {
          "display": "flex",
          "justify-content": "space-between",
          "align-items": "center",
          "margin-top": "2vh",
          "padding-top": "1.5vh",
          "border-top": "1px solid rgba(255, 255, 255, 0.1)"
        },
        "components": [
          {
            "type": "text",
            "name": "url-hint",
            "opts": {
              "text": "news.ycombinator.com"
            },
            "style": {
              "font-size": "1.5vh",
              "color": "rgba(255, 255, 255, 0.3)"
            }
          },
          {
            "type": "text",
            "name": "powered-by",
            "opts": {
              "text": "Powered by Castmill"
            },
            "style": {
              "font-size": "1.5vh",
              "color": "rgba(255, 255, 255, 0.2)"
            }
          }
        ]
      }
    ]
  },
  "options_schema": {
    "scroll_speed": {
      "type": "number",
      "required": false,
      "default": 30,
      "min": 10,
      "max": 100,
      "description": "Scroll speed in pixels per second",
      "order": 1
    },
    "max_items": {
      "type": "number",
      "required": false,
      "default": 20,
      "min": 5,
      "max": 30,
      "description": "Maximum number of stories to display",
      "order": 2
    }
  },
  "data_schema": {
    "items": {
      "type": "list",
      "description": "News items from Hacker News RSS feed",
      "items": {
        "type": "map",
        "schema": {
          "title": "string",
          "pubDate_formatted": "string",
          "source": "string",
          "score": "string",
          "comments": "string"
        }
      },
      "default": [
        {
          "title": "Show HN: A new way to build AI applications",
          "pubDate_formatted": "2 hours ago",
          "source": "github.com",
          "score": "342",
          "comments": "127"
        },
        {
          "title": "The Architecture of Open Source Applications",
          "pubDate_formatted": "4 hours ago",
          "source": "aosabook.org",
          "score": "256",
          "comments": "89"
        },
        {
          "title": "Why Rust is the Future of Systems Programming",
          "pubDate_formatted": "5 hours ago",
          "source": "blog.rust-lang.org",
          "score": "189",
          "comments": "234"
        },
        {
          "title": "PostgreSQL 17: What's New and Why It Matters",
          "pubDate_formatted": "6 hours ago",
          "source": "postgresql.org",
          "score": "145",
          "comments": "67"
        }
      ]
    }
  },
  "integration": {
    "type": "PULL",
    "fetcher": "rss",
    "config": {
      "feed_url": "https://hnrss.org/frontpage",
      "refresh_interval": 300
    }
  },
  "meta": {
    "category": "news",
    "tags": ["rss", "news", "hacker-news", "tech", "programming"],
    "license": "MIT",
    "repository": "https://github.com/castmill/castmill"
  }
}
