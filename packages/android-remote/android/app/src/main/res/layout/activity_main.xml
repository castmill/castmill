<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- App Header -->
        <TextView
            android:id="@+id/tvAppTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:importantForAccessibility="no" />

        <TextView
            android:id="@+id/tvAppSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_subtitle"
            android:textSize="14sp"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:importantForAccessibility="no" />

        <!-- Device ID Section -->
        <TextView
            android:id="@+id/tvDeviceIdLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/device_id_label"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvDeviceId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/device_id_loading"
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:layout_marginBottom="24dp"
            android:contentDescription="@string/device_id_content_description" />

        <!-- Permissions Section -->
        <TextView
            android:id="@+id/tvPermissionsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/permissions_header"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Accessibility Service Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardAccessibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/accessibility_permission_title"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvAccessibilityStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/status_disabled"
                        android:textColor="#FF9800"
                        android:textStyle="bold"
                        android:contentDescription="@string/accessibility_status_disabled" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/accessibility_permission_description"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnEnableAccessibility"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/enable_accessibility_button"
                    android:enabled="true" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Screen Capture Permission Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardScreenCapture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/screen_capture_permission_title"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvScreenCaptureStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/status_not_granted"
                        android:textColor="#FF9800"
                        android:textStyle="bold"
                        android:contentDescription="@string/screen_capture_status_not_granted" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/screen_capture_permission_description"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnRequestScreenCapture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/request_screen_capture_button"
                    android:enabled="true" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Status Section -->
        <TextView
            android:id="@+id/tvStatusHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/status_header"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvServiceStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/service_status_stopped"
            android:layout_marginBottom="16dp"
            android:textSize="14sp" />

        <!-- Info Section -->
        <TextView
            android:id="@+id/tvInfoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/info_text"
            android:textSize="12sp"
            android:layout_marginTop="16dp"
            android:gravity="center" />

    </LinearLayout>
</ScrollView>
