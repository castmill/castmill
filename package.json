{
  "name": "castmill",
  "description": "Castmill Digital Signage Platform",
  "private": true,
  "scripts": {
    "format:ui-common": "cd packages/ui-common && yarn format",
    "format:cache": "cd packages/cache && yarn format",
    "format:dashboard": "cd packages/dashboard && yarn format",
    "format:device": "cd packages/device && yarn format",
    "format:player": "cd packages/player && yarn format",
    "format:widged": "cd packages/widged && yarn format",
    "format:platforms:android": "cd packages/platforms/android-player && yarn format",
    "format:platforms:webos": "cd packages/platforms/webos-player && yarn format",
    "format:platforms:electron": "cd packages/platforms/electron-player && yarn format",
    "format:platforms:legacy": "cd packages/platforms/legacy-adapter-player && yarn format",
    "format:platforms": "yarn run format:platforms:android && yarn run format:platforms:webos && yarn run format:platforms:electron && yarn run format:platforms:legacy",
    "format:all": "yarn run format:ui-common && yarn run format:cache && yarn run format:dashboard && yarn run format:device && yarn run format:player && yarn run format:widged && yarn run format:platforms",
    "format:check:ui-common": "cd packages/ui-common && yarn format:check",
    "format:check:cache": "cd packages/cache && yarn format:check",
    "format:check:dashboard": "cd packages/dashboard && yarn format:check",
    "format:check:device": "cd packages/device && yarn format:check",
    "format:check:player": "cd packages/player && yarn format:check",
    "format:check:widged": "cd packages/widged && yarn format:check",
    "format:check:platforms:android": "cd packages/platforms/android-player && yarn format:check",
    "format:check:platforms:webos": "cd packages/platforms/webos-player && yarn format:check",
    "format:check:platforms:electron": "cd packages/platforms/electron-player && yarn format:check",
    "format:check:platforms:legacy": "cd packages/platforms/legacy-adapter-player && yarn format:check",
    "format:check:platforms": "yarn run format:check:platforms:android && yarn run format:check:platforms:webos && yarn run format:check:platforms:electron && yarn run format:check:platforms:legacy",
    "format:check:all": "yarn run format:check:ui-common && yarn run format:check:cache && yarn run format:check:dashboard && yarn run format:check:device && yarn run format:check:player && yarn run format:check:widged && yarn run format:check:platforms",
    "build:ui-common": "cd packages/ui-common && yarn build",
    "build:cache": "cd packages/cache && yarn build",
    "build:player": "cd packages/player && yarn build",
    "build:device": "cd packages/device && yarn build",
    "build:dashboard": "cd packages/dashboard && yarn build",
    "build:widged": "cd packages/widged && yarn build",
    "build:website": "cd packages/website && yarn build",
    "dev:website": "cd packages/website && yarn start",
    "build:platforms:android": "cd packages/platforms/android-player && yarn build",
    "build:platforms:webos": "cd packages/platforms/webos-player && yarn build",
    "build:platforms:electron": "cd packages/platforms/electron-player && yarn build",
    "build:platforms:legacy": "cd packages/platforms/legacy-adapter-player && yarn build",
    "build:platforms": "yarn run build:platforms:android && yarn run build:platforms:webos && yarn run build:platforms:electron && yarn run build:platforms:legacy",
    "build:all": "yarn run build:ui-common && yarn run build:cache && yarn run build:player && yarn run build:device && yarn run build:dashboard && yarn run build:widged && yarn run build:platforms"
  },
  "workspaces": [
    "packages/cache",
    "packages/dashboard",
    "packages/device",
    "packages/player",
    "packages/ui-common",
    "packages/website",
    "packages/widged",
    "packages/platforms/*",
    "packages/castmill/assets"
  ],
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "eslint": "^9.20.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.23.0"
  },
  "dependencies": {
    "@docusaurus/core": "^3.9.1",
    "@docusaurus/module-type-aliases": "^3.9.1",
    "@docusaurus/preset-classic": "^3.9.1"
  },
  "resolutions": {
    "glob": "^10.3.10",
    "npmlog": "^7.0.1",
    "rimraf": "^5.0.5",
    "request": "^2.88.2",
    "uuid": "^9.0.1",
    "gauge": "^5.0.1",
    "are-we-there-yet": "^4.0.0",
    "har-validator": "^5.1.5"
  }
}
